{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "node16",
    "target": "es2022",
    "lib": ["es2023"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
